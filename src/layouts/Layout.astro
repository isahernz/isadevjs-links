---
import "@/styles/global.css";
import Footer from "@/components/Footer.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Mi página más personal como desarrollador web isadevjs 👨‍💻</title>

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <meta
      name="description"
      content="Una página personal en donde comparto mis redes sociales y mis tecnologías favoritas como desarrollador web. </>"
    />

    <!-- Open Graph -->
    <meta property="og:url" content="https://isadevjs.com" />
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="Mi página más personal como desarrollador web - isadevjs 👨‍💻"
    />
    <meta property="og:locale" content="es_ES" />
    <meta
      property="og:description"
      content="Una página personal en donde comparto mis redes sociales y mis tecnologías favoritas como desarrollador web. </>"
    />
    <meta property="og:image" content="/og-isadevjs-links.webp" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@_isahernz" />
    <meta name="twitter:creator" content="@_isahernz" />
    <meta
      name="twitter:title"
      content="Mi página más personal como desarrollador web - isadevjs 👨‍💻"
    />
    <meta
      name="twitter:description"
      content="Una página personal en donde comparto mis redes sociales y mis tecnologías favoritas como desarrollador web. </>"
    />
  </head>
  <body
    class="max-w-xl mx-auto min-h-dvh bg-gradient-to-b from-black via-sky-950 to-gray-800"
  >
    <slot />
    <Footer />
  </body>
</html>
